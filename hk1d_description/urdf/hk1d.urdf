<?xml version="1.0"?>
<robot name="hk1d">
 <!-- Import your models -->
  <material name="RRBOT/black">
    <color rgba="0.0 0.0 0.0 1.0"/>
  </material>
  <material name="RRBOT/blue">
    <color rgba="0.0 0.0 0.8 1.0"/>
  </material>
  <material name="RRBOT/green">
    <color rgba="0.0 0.8 0.0 1.0"/>
  </material>
  <material name="RRBOT/grey">
    <color rgba="0.2 0.2 0.2 1.0"/>
  </material>
  <material name="RRBOT/orange">
    <color rgba="1.0 0.423529411765 0.0392156862745 1.0"/>
  </material>
  <material name="RRBOT/brown">
    <color rgba="0.870588235294 0.811764705882 0.764705882353 1.0"/>
  </material>
  <material name="RRBOT/red">
    <color rgba="0.8 0.0 0.0 1.0"/>
  </material>
  <material name="RRBOT/white">
    <color rgba="1.0 1.0 1.0 1.0"/>
  </material>


 <!-- //////////////////// links //////////////////////-->
    <link name="world"/>
  <gazebo reference="world">
    <static>true</static>
  </gazebo>
  
  <joint name="hk1d_fixed" type="fixed">
    <origin rpy="0 0 0" xyz="0 0 0"/>
    <parent link="world"/>
    <child link="hk1d_base"/>
  </joint>

    <link name="hk1d_base">
        <!-- <collision>
            <origin rpy="0 0 0" xyz="0 0 1.0"/>
            <geometry>
                <box size="0.1 0.1 2"/>
            </geometry>
        </collision> -->
        <visual>
            <origin rpy="0 0 0" xyz="0 0 0.1"/>
            <geometry>
                <box size="0.4 0.1 0.2"/>
            </geometry>
            <material name="RRBOT/white"/>
        </visual>
        <!-- <inertial>
            <origin rpy="0 0 0" xyz="0 0 1.0"/>
            <mass value="1"/>
            <inertia ixx="1.0" ixy="0.0" ixz="0.0" iyy="1.0" iyz="0.0" izz="1.0"/>
        </inertial> -->
    </link>


    <link name="hk1d_link_1">
        <visual>
            <origin rpy="0 0 0" xyz="-0.25 0 0.25"/>
            <geometry>
                <box size="0.1 0.1 0.5"/>
            </geometry>
            <material name="RRBOT/blue"/>
        </visual>
    </link>

    <link name="hk1d_link_2">
        <visual>
            <origin rpy="0 0 0" xyz="0.25 0 0.25"/>
            <geometry>
                <box size="0.1 0.1 0.5"/>
            </geometry>
            <material name="RRBOT/orange"/>
        </visual>
    </link>


    <joint name="operator_joint_1" type="revolute">
        <origin rpy="0 0 0" xyz="0 0 0"/>
        <parent link="hk1d_base"/>
        <child link="hk1d_link_1"/>
        <axis xyz="1 0 0"/>
        <limit effort="120" velocity="50.0" lower="-20" upper="20" />
    </joint>

    <joint name="remote_joint_1" type="revolute">
        <origin rpy="0 0 0" xyz="0 0 0"/>
        <parent link="hk1d_base"/>
        <child link="hk1d_link_2"/>
        <axis xyz="1 0 0"/>
        <limit effort="120" velocity="50.0" lower="-20" upper="20" />
    </joint>
    
